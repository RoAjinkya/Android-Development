<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:orientation="vertical" 
   >

 

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="6dp" >

        <Button
            android:id="@+id/activity_Registeration"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Registration"
            android:padding="6dp"
            android:textColor="@android:color/white" />
    
        <Button
            android:id="@+id/adminfirstview_studexam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Exam" 
             android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
             android:padding="6dp"/>

        <Button
            android:id="@+id/adminfirstview_brnchyr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department Information" 
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
              android:background="@drawable/button_background"
               android:padding="6dp"/>
        
        
        
        <Button
            android:id="@+id/adminfirstview_lecturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor Information" 
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
              android:background="@drawable/button_background"
               android:padding="6dp"/>
        <!-- 
         <Button
            android:id="@+id/adminfirstview_studentinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Information" 
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
              android:background="@drawable/button_background"
               android:padding="6dp"/>
        
         -->
        
                
        <Button
            android:id="@+id/adminfirstview_changepasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password" 
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
              android:background="@drawable/button_background"
               android:padding="6dp"/>
        
        
        
        
  
        
    </LinearLayout>

</LinearLayout>