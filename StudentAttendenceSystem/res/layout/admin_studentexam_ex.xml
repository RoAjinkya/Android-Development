                    </TextView>

                    <TextView
                        android:id="@+id/adminviewex_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="000"
                        android:textColor="@android:color/white" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Student ID"
                        android:textColor="@android:color/white" />

